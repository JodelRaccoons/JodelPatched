<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/image_edit_main_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@id/image_edition_area"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@id/edit_photo_relative_layout_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@id/image_edit_preview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY" />

            <com.jodelapp.jodelandroidv3.view.drawing.DrawingView
                android:id="@id/image_edit_canvas"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />

            <android.support.v4.view.ViewPager
                android:id="@id/geo_filter_pager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" />

            <com.pixplicity.fontview.FontEditText
                android:id="@id/text_on_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60.0dip"
                android:layout_marginTop="60.0dip"
                android:background="@color/orange_90_transparent"
                android:hint="@string/enter_text_pictures"
                android:inputType="textMultiLine|textNoSuggestions"
                android:maxLength="@integer/max_photo_text_length"
                android:maxLines="@integer/max_photo_post_lines"
                android:paddingBottom="6.0dip"
                android:paddingLeft="14.0dip"
                android:paddingRight="14.0dip"
                android:paddingTop="6.0dip"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textColorHint="@color/grey"
                android:textSize="22.0sp"
                android:visibility="invisible"
                app:pix_font="fonts/gotham_bold.otf" />
        </RelativeLayout>
    </FrameLayout>

    <ImageButton
        android:id="@id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="15.0dip"
        android:paddingTop="26.0dip"
        android:src="@drawable/backwards_line_white" />

    <ImageButton
        android:id="@id/undo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="7.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/transparent"
        android:padding="10.0dip"
        android:src="@drawable/undo_button"
        android:visibility="gone" />

    <ImageButton
        android:id="@id/geo_filter_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:paddingBottom="36.0dip"
        android:paddingLeft="36.0dip"
        android:paddingRight="17.0dip"
        android:paddingTop="24.0dip"
        android:src="@drawable/picture_location_off"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/geo_filter_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:paddingBottom="36.0dip"
        android:paddingLeft="36.0dip"
        android:paddingRight="17.0dip"
        android:paddingTop="24.0dip"
        android:src="@drawable/picture_location_off"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:paddingBottom="36.0dip"
        android:paddingLeft="36.0dip"
        android:paddingRight="17.0dip">

        <ImageButton
            android:layout_margin="20dp"
            android:id="@+id/ibToggleScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_toggle_scale"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/ibPainterPalette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="20dp"
            android:src="@drawable/ic_color_palette"
            android:visibility="visible" />

        <ImageButton
            android:layout_margin="20dp"
            android:id="@+id/ibStrokeWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ibToggleScale"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_pencil"
            android:visibility="visible" />

    </LinearLayout>


    <ImageButton
        android:id="@id/save_to_gallery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:paddingBottom="20.0dip"
        android:paddingLeft="15.0dip"
        android:src="@drawable/save_image_locally_button" />

    <com.pixplicity.fontview.FontTextView
        android:id="@id/send_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:padding="20.0dip"
        android:text="@string/send_post"
        android:textColor="@android:color/white"
        android:textSize="21.0sp" />

    <include
        android:id="@id/photo_edit_tools"
        layout="@layout/photo_edit_tools"
        android:visibility="gone" />

    <com.pixplicity.fontview.FontTextView
        android:id="@id/saved_locally_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:alpha="0.2"
        android:gravity="center"
        android:text="@string/photo_saved_locally"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@id/sending_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>